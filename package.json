{
  "name": "hearts4horses",
  "version": "1.0.0",
  "description": "Equestrian training and lesson management platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run dev --filter=@hearts4horses/api",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "db:generate": "cd apps/api && npm run db:generate",
    "db:migrate": "cd apps/api && npm run db:migrate",
    "db:migrate:prod": "cd apps/api && npm run db:migrate:prod",
    "db:seed": "cd apps/api && npm run db:seed",
    "db:seed:prod": "cd apps/api && npm run db:seed:prod",
    "db:studio": "cd apps/api && npm run db:studio",
    "db:reset": "cd apps/api && npm run db:reset",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hearts4horses/platform"
  },
  "author": "Hearts4Horses",
  "license": "MIT"
}